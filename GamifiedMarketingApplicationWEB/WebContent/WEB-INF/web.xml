<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>GamifiedMarketingApplication</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>LoginChecker</filter-name>
		<filter-class>it.polimi.db2.filters.LoginChecker</filter-class>
	</filter>
	<filter>
		<filter-name>BlockChecker</filter-name>
		<filter-class>it.polimi.db2.filters.BlockChecker</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginChecker</filter-name>
		<url-pattern>/CancelAnswer</url-pattern>
		<url-pattern>/CreateAnswer</url-pattern>
		<url-pattern>/GoToGreetingsPage</url-pattern>
		<url-pattern>/GoToHomePage</url-pattern>
		<url-pattern>/GoToMarketing</url-pattern>
		<url-pattern>/GoToStatistical</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>BlockChecker</filter-name>
		<url-pattern>/CancelAnswer</url-pattern>
		<url-pattern>/CreateAnswer</url-pattern>
		<url-pattern>/GoToGreetingsPage</url-pattern>
		<url-pattern>/GoToHomePage</url-pattern>
		<url-pattern>/GoToMarketing</url-pattern>
		<url-pattern>/GoToStatistical</url-pattern>
	</filter-mapping>
</web-app>